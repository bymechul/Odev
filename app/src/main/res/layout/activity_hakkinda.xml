<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HakkındaActivity">
    <ImageView
        android:id="@+id/imagepp"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pp"
        tools:srcCompat="@drawable/pp" />
    <TextView
        android:id="@+id/text"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:text="Dincer Aydın 191030061 Blockchain startup'u kurmak istiyorum. Kurmak istediğim startup hakkında bir çok bilgi öğreniyorum."
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagepp" />
</androidx.constraintlayout.widget.ConstraintLayout>